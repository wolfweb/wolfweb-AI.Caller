{
  "Recording": {
    "Codec": "PCM_WAV",
    "SampleRate": 8000,
    "Channels": 1,
    "BitRate": 64000,
    "OutputDirectory": "./recordings",
    "FileNameTemplate": "{timestamp}_{caller}_{duration}",
    "AutoStart": false,
    "RecordBothParties": true,
    "MaxDuration": "02:00:00",
    "MaxFileSize": 104857600,
    "Quality": "Standard",
    "EnableNoiseReduction": false,
    "EnableVolumeNormalization": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "AI.Caller.Core.Recording": "Debug",
      "AI.Caller.Core.Recording.AudioDataFlowMonitor": "Information",
      "AI.Caller.Core.Recording.RecordingBackgroundService": "Information"
    }
  }
}