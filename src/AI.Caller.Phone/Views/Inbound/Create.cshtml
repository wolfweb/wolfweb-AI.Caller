@model AI.Caller.Phone.Models.InboundTemplate
@{
    ViewData["Title"] = "创建呼入模板";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-plus"></i> 创建呼入模板</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> 返回列表
    </a>
</div>

@if (TempData["Error"] != null) {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">模板名称 <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="请输入模板名称" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="IsActive" class="form-label">状态</label>
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                            <label asp-for="IsActive" class="form-check-label">
                                启用模板
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">描述</label>
                <input asp-for="Description" class="form-control" placeholder="请输入模板描述（可选）">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="WelcomeScript" class="form-label">欢迎脚本 <span class="text-danger">*</span></label>
                <textarea asp-for="WelcomeScript" class="form-control" rows="4" 
                          placeholder="请输入呼入时的欢迎脚本，例如：您好，欢迎致电XX公司，我是AI客服助手..." required></textarea>
                <span asp-validation-for="WelcomeScript" class="text-danger"></span>
                <div class="form-text">
                    这是用户呼入时首先听到的欢迎语音内容
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ResponseRules" class="form-label">响应规则</label>
                <textarea asp-for="ResponseRules" class="form-control" rows="6" 
                          placeholder="请输入JSON格式的响应规则（可选）"></textarea>
                <span asp-validation-for="ResponseRules" class="text-danger"></span>
                <div class="form-text">
                    可选的JSON格式响应规则，用于定义不同场景下的自动回复逻辑
                </div>
            </div>

            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>使用说明：</strong>
                <ul class="mb-0 mt-2">
                    <li>模板名称：用于标识不同的呼入处理模板</li>
                    <li>欢迎脚本：用户呼入时播放的语音内容</li>
                    <li>响应规则：可定义复杂的对话逻辑（JSON格式）</li>
                    <li>可以设置多个模板，并指定其中一个为默认模板</li>
                </ul>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check"></i> 创建模板
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x"></i> 取消
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}