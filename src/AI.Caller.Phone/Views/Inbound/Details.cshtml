@model AI.Caller.Phone.Models.InboundTemplate
@{
    ViewData["Title"] = "呼入模板详情";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-file-text"></i> @Model.Name</h2>
    <div>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-primary">
            <i class="bi bi-pencil"></i> 编辑
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> 返回列表
        </a>
    </div>
</div>

@if (TempData["Success"] != null) {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null) {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-info-circle"></i> 模板信息</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">模板名称：</dt>
                    <dd class="col-sm-9">@Model.Name</dd>
                    
                    <dt class="col-sm-3">描述：</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Description)) {
                            @Model.Description
                        } else {
                            <span class="text-muted">无描述</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">状态：</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive) {
                            <span class="badge bg-success">启用</span>
                        } else {
                            <span class="badge bg-secondary">禁用</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">默认模板：</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsDefault) {
                            <span class="badge bg-warning">
                                <i class="bi bi-star-fill"></i> 是
                            </span>
                        } else {
                            <span class="text-muted">否</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">创建时间：</dt>
                    <dd class="col-sm-9">@Model.CreatedTime.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    
                    @if (Model.UpdatedTime.HasValue) {
                        <dt class="col-sm-3">更新时间：</dt>
                        <dd class="col-sm-9">@Model.UpdatedTime.Value.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="bi bi-chat-text"></i> 欢迎脚本</h5>
            </div>
            <div class="card-body">
                <div class="bg-light p-3 rounded">
                    <pre class="mb-0">@Model.WelcomeScript</pre>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ResponseRules)) {
            <div class="card mt-3">
                <div class="card-header">
                    <h5><i class="bi bi-gear"></i> 响应规则</h5>
                </div>
                <div class="card-body">
                    <div class="bg-light p-3 rounded">
                        <pre class="mb-0"><code>@Model.ResponseRules</code></pre>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-gear"></i> 操作</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> 编辑模板
                    </a>
                    
                    @if (!Model.IsDefault) {
                        <form asp-action="SetDefault" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-warning w-100">
                                <i class="bi bi-star"></i> 设为默认
                            </button>
                        </form>
                        
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" 
                              onsubmit="return confirm('确定要删除这个模板吗？')">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash"></i> 删除模板
                            </button>
                        </form>
                    } else {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-info-circle"></i>
                            <small>默认模板不能删除</small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="bi bi-lightbulb"></i> 使用提示</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li><i class="bi bi-check-circle text-success"></i> 欢迎脚本会在用户呼入时播放</li>
                    <li><i class="bi bi-check-circle text-success"></i> 响应规则可定义复杂的对话逻辑</li>
                    <li><i class="bi bi-check-circle text-success"></i> 默认模板用于处理所有呼入</li>
                    <li><i class="bi bi-check-circle text-success"></i> 可以创建多个模板备用</li>
                </ul>
            </div>
        </div>
    </div>
</div>