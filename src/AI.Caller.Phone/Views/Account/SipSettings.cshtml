@model AI.Caller.Phone.Controllers.SipSettingsModel

@{
    ViewData["Title"] = "SIP账号设置";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-telephone"></i> SIP账号设置</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                        </div>
                    }
                    @if (TempData["WarningMessage"] != null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-circle-fill"></i> @TempData["WarningMessage"]
                        </div>
                    }

                    <form asp-action="SipSettings" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="alert alert-info mb-4">
                            <p><i class="bi bi-info-circle"></i> SIP账号设置是使用电话功能的必要条件。请填写您的SIP服务提供商提供的账号信息。</p>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="SipUsername" class="form-label">SIP用户名</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="SipUsername" class="form-control" placeholder="例如: user123" />
                            </div>
                            <span asp-validation-for="SipUsername" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="SipPassword" class="form-label">SIP密码</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-key"></i></span>
                                <input asp-for="SipPassword" type="password" class="form-control" placeholder="输入SIP密码" />
                            </div>
                            <span asp-validation-for="SipPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="SipServer" class="form-label">SIP服务器</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-server"></i></span>
                                <input asp-for="SipServer" class="form-control" placeholder="例如: sip.example.com" />
                            </div>
                            <span asp-validation-for="SipServer" class="text-danger"></span>
                            <small class="text-muted">通常是您的SIP服务提供商的域名或IP地址</small>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> 保存设置
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> 返回
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 