@using AI.Caller.Phone.Entities
@model IEnumerable<Contact>

@{
    ViewData["Title"] = "联系人管理";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-person-lines-fill"></i> 联系人管理</h2>
        </div>
        <div class="col-auto">
            <a asp-action="AddContact" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> 添加联系人
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0">联系人列表</h5>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" id="searchContacts" class="form-control" placeholder="搜索联系人...">
                    </div>
                </div>
            </div>
        </div>
        
        @if (Model == null || !Model.Any())
        {
            <div class="card-body text-center py-5">
                <i class="bi bi-person-lines-fill fs-1 text-muted"></i>
                <h4 class="mt-3">暂无联系人</h4>
                <p class="text-muted">您还没有添加任何联系人</p>
                <a asp-action="AddContact" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> 添加第一个联系人
                </a>
            </div>
        }
        else
        {
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0" id="contactsTable">
                        <thead class="table-light">
                            <tr>
                                <th>姓名</th>
                                <th>电话号码</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contact in Model)
                            {
                                <tr class="contact-row">
                                    <td>
                                        <i class="bi bi-person-circle text-primary me-2"></i>
                                        @contact.Name
                                    </td>
                                    <td>
                                        <i class="bi bi-telephone text-success me-2"></i>
                                        @contact.PhoneNumber
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="EditContact" asp-route-id="@contact.Id" class="btn btn-outline-primary" title="编辑">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="DeleteContact" asp-route-id="@contact.Id" class="btn btn-outline-danger" title="删除">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                            <button class="btn btn-outline-success call-contact-btn" 
                                                    data-name="@contact.Name" 
                                                    data-phone="@contact.PhoneNumber" 
                                                    title="拨打">
                                                <i class="bi bi-telephone-fill"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        共 @Model.Count() 个联系人
                    </div>
                    <div>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> 返回主页
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 搜索功能
            const searchInput = document.getElementById('searchContacts');
            const contactRows = document.querySelectorAll('.contact-row');
            
            searchInput.addEventListener('keyup', function() {
                const searchTerm = this.value.toLowerCase();
                
                contactRows.forEach(row => {
                    const name = row.querySelector('td:first-child').textContent.toLowerCase();
                    const phone = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
                    
                    if (name.includes(searchTerm) || phone.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
            
            // 拨打联系人电话功能
            document.querySelectorAll('.call-contact-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const name = this.dataset.name;
                    const phone = this.dataset.phone;
                    
                    // 设置主页拨号器的值
                    if (window.opener && window.opener.setDialerValue) {
                        window.opener.setDialerValue(phone, name);
                    } else {
                        // 如果在主页，直接设置拨号器值
                        const destinationInput = document.getElementById('destination');
                        if (destinationInput) {
                            destinationInput.value = phone;
                            // 如果有联系人名称显示区域，也更新它
                            const callerName = document.getElementById('callerName');
                            if (callerName) {
                                callerName.textContent = name;
                            }
                        }
                    }
                    
                    // 如果在联系人管理页面，可以考虑跳转到主页
                    if (window.location.pathname.includes('/Account/ManageContacts')) {
                        window.location.href = '/Home/Index';
                    }
                });
            });
        });
    </script>
}