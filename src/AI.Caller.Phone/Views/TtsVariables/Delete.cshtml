@model AI.Caller.Phone.Entities.TtsVariable

@{
    ViewData["Title"] = "删除变量";
    var usageCount = Model.TtsTemplates.Count;
}

<h1>@ViewData["Title"]</h1>

@if (usageCount > 0)
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">警告!</h4>
        <p>此变量正在被 <strong>@usageCount</strong> 个TTS模板使用。如果删除，这些模板可能无法正常工作。</p>
        <hr>
        <p class="mb-0">请确认您了解此操作的后果。</p>
    </div>
}
else
{
    <h3>您确定要删除这个变量吗?</h3>
}

<div>
    <h4>TTS变量</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="确认删除" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">返回列表</a>
    </form>
</div>