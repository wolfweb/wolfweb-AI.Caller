@model IEnumerable<AI.Caller.Phone.Entities.TtsVariable>

@{
    ViewData["Title"] = "TTS变量管理";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">创建新变量</a>
</p>

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">变量列表</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>使用计数</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td><code>@Html.DisplayFor(modelItem => item.Name)</code></td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <span class="badge bg-primary rounded-pill">@item.TtsTemplates.Count</span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">编辑</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">删除</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>